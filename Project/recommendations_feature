<body>
    <div class="container">
        <h1>Course Recommendation System</h1>
        <div class="legend">
            <span class="required">■ Required</span>
            <span class="optional">■ Not Required</span>
        </div>
        <select id="majorSelect" onchange="filterCourses()">
            <option value="">Select your major</option>
            <option value="biomedical">Biomedical Engineering</option>
            <option value="chemical">Chemical Engineering</option>
            <option value="civil">Civil Engineering</option>
            <option value="electrical">Electrical Engineering</option>
        </select>
        <select id="courseSelect" onchange="showRecommendations()">
            <option value="">Select a course</option>
        </select>
        <div id="recommendations" class="card hidden">
            <h2>Recommended Courses</h2>
            <ul id="recommendationList"></ul>
        </div>
    </div>
    <script>
        const courses = {
            biomedical: [
                { code: "14:125:201", name: "INTRO BIOMEDICAL ENG" }
            ],
            chemical: [
                { code: "14:155:201", name: "CHEME MAT ENERGY BAL" }
            ],
            civil: [
                { code: "14:180:215", name: "ENGINEERING GRAPHICS" }
            ],
            electrical: [
                { code: "14:332:221", name: "PRIN ELEC ENGG I" },
                { code: "14:332:443", name: "MACHINE LEARNING" }
            ]
        };

        const recommendations = {
            "14:125:201": [
                { course: "14:125:255 : BME SYST PHYSIOLOGY", type: "required" },
                { course: "14:125:303 : BIOMED TRANSP PHENOM", type: "optional" }
            ],
            "14:155:201": [
                { course: "14:155:291 : UNDERGRAD RSRCH SO", type: "required" }
            ],
            "14:180:215": [
                { course: "14:180:243 : MECHANICS OF SOLIDS", type: "optional" }
            ],
            "14:332:221": [
                { course: "14:332:222 : PRIN ELEC ENGG II", type: "required" },
                { course: "14:332:345 : LINEAR SYS & SIGNALS", type: "optional" }
            ],
            "14:332:443": [
                { course: "14:332:345 : LINEAR SYS & SIGNALS", type: "required" },
                { course: "14:332:231 : DIGITAL LOGIC DESIGN", type: "optional" }
            ]
        };

        function filterCourses() {
            const majorSelect = document.getElementById('majorSelect').value;
            const courseSelect = document.getElementById('courseSelect');
            courseSelect.innerHTML = '<option value="">Select a course</option>';
            if (courses[majorSelect]) {
                courses[majorSelect].forEach(course => {
                    const option = document.createElement('option');
                    option.value = course.code;
                    option.textContent = `${course.code} : ${course.name}`;
                    courseSelect.appendChild(option);
                });
            }
        }

        function showRecommendations() {
            const selectedCourse = document.getElementById('courseSelect').value;
            const recommendationList = document.getElementById('recommendationList');
            const recommendationsDiv = document.getElementById('recommendations');
            
            recommendationList.innerHTML = '';
            if (selectedCourse && recommendations[selectedCourse]) {
                recommendations[selectedCourse].forEach(item => {
                    const li = document.createElement('li');
                    li.textContent = item.course;
                    li.className = item.type;
                    recommendationList.appendChild(li);
                });
                recommendationsDiv.classList.remove('hidden');
            } else {
                recommendationsDiv.classList.add('hidden');
            }
        }
    </script>
</body>
</html>
