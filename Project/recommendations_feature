        h1, h2 { background: #d50032; color: #fff; padding: 10px; border-radius: 4px; text-align: center; }
        select { width: 100%; padding: 10px; margin: 20px 0; border: 1px solid #ccc; border-radius: 4px; }
        .card { border: 1px solid #ccc; border-radius: 8px; padding: 16px; margin-top: 20px; background: #fff; }
        .hidden { display: none; }
        .required { color: #d9534f; font-weight: bold; }
        .optional { color: #5cb85c; }
        .legend { font-size: 0.9em; color: #555; margin-top: 10px; text-align: center; }
        .legend span { display: inline-block; margin: 0 10px; }
    </style>
